{% if event.preview or order.source_name == "shopify_draft_order" %}
  {% action "shopify" %}
    mutation {
      tagsAdd(
        id: {{ order.admin_graphql_api_id | default: "gid://shopify/Order/1234567890" | json }}
        tags: {{ options.tag_to_add__required | json }}
      ) {
        userErrors {
          field
          message
        }
      }
    }
  {% endaction %}
{% endif %}